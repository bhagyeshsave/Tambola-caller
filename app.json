{
  "expo": {
    "name": "Tambola Caller",
    "slug": "tambola-caller",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "tambolacaller",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "The perfect companion app for hosting Tambola and Housie games. Generate random numbers 1-100, view a live grid display, and track your generation history.",
    "githubUrl": "",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tambolacaller.app"
    },
    "android": {
      "package": "com.tambolacaller.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#312E81",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": []
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#312E81",
          "dark": {
            "backgroundColor": "#1E1B4B"
          }
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
